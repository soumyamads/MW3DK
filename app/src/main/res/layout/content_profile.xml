<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:layout_toRightOf="@+id/chk1"
            android:textColor="#002148"

            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#979797"
            android:layout_marginTop="15dp"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Name"
                android:textColor="#002148"
                android:layout_marginLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />
            <TextView
                android:id="@+id/nameval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:text="Name- Please call us at (855)962-3621 to change your name."
                android:textColor="#002148"
                android:textSize="15dp"                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#979797"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/emailtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Email(Optional)"
                android:layout_toRightOf="@+id/joinnw"
                android:textColor="#002148"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />
            <EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="abc@gmail.com"
                android:inputType="textEmailAddress"
                android:background="@drawable/rounded_edittextgrey"
                android:padding="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#979797"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/cell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Cell"
                android:layout_toRightOf="@+id/joinnw"
                android:textColor="#002148"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />
            <EditText
                android:id="@+id/clnum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="9851247585"
                android:inputType="phone"
                android:background="@drawable/rounded_edittextgrey"
                android:padding="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Home (Optional)"
                android:layout_toRightOf="@+id/joinnw"
                android:textColor="#002148"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />
            <EditText
                android:id="@+id/homenum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="phone"
                android:background="@drawable/rounded_edittextgrey"
                android:padding="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Work(Optional)"
                android:layout_toRightOf="@+id/joinnw"
                android:textColor="#002148"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />
            <EditText
                android:id="@+id/wrknum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="phone"
                android:background="@drawable/rounded_edittextgrey"
                android:padding="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/prfno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Preferred Number"
                android:layout_toRightOf="@+id/joinnw"
                android:textColor="#002148"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittextgrey"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                >
            <Spinner
                android:id="@+id/cellspinr"
                android:drawSelectorOnTop="true"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="wrap_content"
                android:textColor="#0000FF"
                android:padding="10dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/downarw"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"
    android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/addres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Address"
                android:textColor="#002148"
                android:layout_marginLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />
            <EditText
                android:id="@+id/adressline1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Address Line 1"
                android:layout_marginLeft="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_edittextgrey"
                android:padding="10dp"
                android:layout_marginTop="6dp"/>

            <EditText
                android:id="@+id/addressline2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Address Line 2"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_edittextgrey"
                android:padding="10dp"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/adressline3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Indranagar"
                android:layout_marginLeft="10dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/rounded_edittextgrey"
                android:padding="10dp"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/state"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="State"
                android:layout_marginLeft="10dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/rounded_edittextgrey"
                android:padding="10dp"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/zipcode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Zipcode"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_edittextgrey"
                android:padding="10dp"
                android:layout_marginTop="6dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/wiluse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex"
                android:layout_marginTop="10dp"
                android:textColor="#002148"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittextgrey"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                >
                <Spinner
                    android:id="@+id/spinner"
                    android:drawSelectorOnTop="true"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:textColor="#0000FF"
                    android:padding="10dp"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/downarw"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/chk1"
                android:textColor="#002148"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittextgrey"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:padding="5dp"
                    >
                    <Spinner
                        android:id="@+id/date"
                        android:drawSelectorOnTop="true"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:layout_height="wrap_content"
                        android:textColor="#0000FF"
                        android:padding="5dp"
                        />
                    <!--<ImageView-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:src="@drawable/downarw"-->
                    <!--android:layout_gravity="right|center_vertical"/>-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittextgrey"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_margin="6dp"

                    >
                    <Spinner
                        android:id="@+id/month"
                        android:drawSelectorOnTop="true"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:layout_height="wrap_content"
                        android:textColor="#0000FF"
                        android:padding="5dp"

                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/downarw"
                        android:padding="10dp"
                        android:layout_gravity="right|center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittextgrey"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_margin="6dp"

                    >
                    <Spinner
                        android:id="@+id/year"
                        android:drawSelectorOnTop="true"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:layout_height="wrap_content"
                        android:textColor="#0000FF"
                        android:padding="5dp"

                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/downarw"
                        android:padding="10dp"
                        android:layout_gravity="right|center_vertical"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_selector_secondary"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white"
                android:text="Save"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_marginTop="20dp"
                android:textColor="#002148"
                android:text="Cancel"
                android:textAllCaps="false"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
