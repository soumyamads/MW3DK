<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                               >
                <ImageView
                    android:id="@+id/profpic"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profoic"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"

                    />

                <TextView
                    android:id="@+id/drname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Abdul"
                    android:layout_marginTop="6dp"
                    android:textColor="#002148"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    />
                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Internist"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:textSize="18dp"
                    android:textColor="#75839b"

                    />
                <ImageView
                    android:id="@+id/rate"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/rate"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f2f2f2"
                    android:padding="6dp"
                    >
                <TextView
                    android:id="@+id/bkapntmnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book an appointment"
                    android:textColor="#002148"
                    android:textSize="19dp"
                    android:gravity="center"

                    />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_marginTop="10dp"
                    >
                    <ImageView
                        android:id="@+id/leftar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/blueleftarw"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today, 3 May 2016"
                        android:layout_gravity="center"
                        android:textColor="#5c60c1"
                        android:layout_centerInParent="true"
                        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                        />
                    <ImageView
                        android:id="@+id/rightarw"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/bluerightarw"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"/>



                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

        </LinearLayout>
        <Button
            android:id="@+id/nextavailblty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:background="@drawable/bottom_selector_secondary"
            android:text="Next Availabe: Tuesday 12 May"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>

</LinearLayout>