<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Are you covered by Dental Insurance?"
            android:textColor="#002148"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:weightSum="1"
            android:id="@+id/radioGroup"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Yes"
                android:id="@+id/radioButton"
                android:checked="false"
                android:textSize="16dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:textSize="16dp"
                />
        </RadioGroup>
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Primary Dental Insurance Policy Information"
            android:textColor="#002148"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"

            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Who is the Primary dental insurance policy holder"
            android:textColor="#002148"
            android:textSize="16dp"
            />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/radioGroup1"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="I am"
                android:id="@+id/radioButton1"
                android:checked="false"
                android:textSize="16dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Someone else is"
                android:id="@+id/radioButton12"
                android:checked="false"
                android:textSize="16dp"
                />
        </RadioGroup>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Policy Holder's Name"
            android:textColor="#002148"
            android:textSize="16dp"
            />
        <EditText
            android:id="@+id/firstname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="First"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittextgrey"
            android:padding="15dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/last"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Last"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittextgrey"
            android:padding="15dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/policyhldr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Policy Holders Relationship to Patient"
            android:textColor="#002148"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittextgrey"
            android:layout_marginTop="10dp"
            >
            <Spinner
                android:id="@+id/spinnerrltn"
                android:drawSelectorOnTop="true"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="wrap_content"
                android:textColor="#0000FF"
                android:padding="10dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/downarw"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/dobplcy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Policy Holders Date of Birth"
            android:textColor="#002148"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittextgrey"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:padding="5dp"
                >
                <Spinner
                    android:id="@+id/date"
                    android:drawSelectorOnTop="true"
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:textColor="#0000FF"
                    android:padding="5dp"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/downarw"
                    android:layout_gravity="right|center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittextgrey"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_margin="6dp"

                >
                <Spinner
                    android:id="@+id/month"
                    android:drawSelectorOnTop="true"
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:textColor="#0000FF"
                    android:padding="5dp"

                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/downarw"
                    android:padding="10dp"
                    android:layout_gravity="right|center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittextgrey"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_margin="6dp"

                >
                <Spinner
                    android:id="@+id/year"
                    android:drawSelectorOnTop="true"
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:textColor="#0000FF"
                    android:padding="5dp"

                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/downarw"
                    android:padding="10dp"
                    android:layout_gravity="right|center_vertical"/>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Policy Holder's Social Security Number"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/chk1"
            android:textColor="#002148"
            android:textSize="18dp"
            />


        <EditText
            android:id="@+id/securityno"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="1234567890"
            android:inputType="phone"
            android:background="@drawable/rounded_edittextgrey"
            android:padding="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/policyhldradress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Policy Holder's Address"
            android:textColor="#002148"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />
        <EditText
            android:id="@+id/adressline1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Address Line 1"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittextgrey"
            android:padding="15dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/addressline2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Address Line 2"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittextgrey"
            android:padding="15dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/adressline3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Indranagar"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittextgrey"
            android:padding="15dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="State"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittextgrey"
            android:padding="15dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/zipcode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Zipcode"
            android:inputType="number"
            android:background="@drawable/rounded_edittextgrey"
            android:padding="15dp"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primary Dental Insurance Holder Phone Number"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/chk1"
            android:textColor="#002148"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/work"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="phone"
            android:background="@drawable/rounded_edittextgrey"
            android:padding="15dp"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:inputType="phone"
            android:background="@drawable/rounded_edittextgrey"
            android:padding="15dp"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/states"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="State"
            android:inputType="phone"
            android:background="@drawable/rounded_edittextgrey"
            android:padding="15dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Policy Holder Employer Name"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/chk1"
            android:textColor="#002148"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/emp_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="phone"
            android:background="@drawable/rounded_edittextgrey"
            android:padding="15dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/insurnctxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Insurance Carrier"
            android:textColor="#002148"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittextgrey"
            android:layout_marginTop="10dp"
            >
            <Spinner
                android:id="@+id/spinnerinsrncarier"
                android:drawSelectorOnTop="true"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="wrap_content"
                android:textColor="#0000FF"
                android:padding="10dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/downarw"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/insurncplntxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Insurance Plan"
            android:textColor="#002148"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittextgrey"
            android:layout_marginTop="10dp"
            >
            <Spinner
                android:id="@+id/insurncplnspnr"
                android:drawSelectorOnTop="true"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="wrap_content"
                android:textColor="#0000FF"
                android:padding="10dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/downarw"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/insurance_idtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Insurance ID / Policy #"
            android:textColor="#002148"
            android:textSize="16dp"
            />
        <EditText
            android:id="@+id/insurance_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittextgrey"
            android:padding="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/groptxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Group #"
            android:textColor="#002148"
            android:textSize="16dp"
            />
        <EditText
            android:id="@+id/grp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittextgrey"
            android:padding="15dp"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/dentasavebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_selector_secondary"
            android:text="Save and Continue"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
           />
    </LinearLayout>
</ScrollView>