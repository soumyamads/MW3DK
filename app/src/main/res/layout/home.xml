<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"

                android:src="@drawable/mw3dk"/>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="MW3DK"-->
                <!--android:layout_gravity="center"-->
                <!--android:id="@+id/toolbar_title"-->
                <!--android:textColor="#333447"-->
                <!--android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"-->
                <!--/>-->

        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#979797"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"

            android:src="@drawable/home"/>
        <ScrollView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                <RelativeLayout
                    android:id="@+id/relatvspclty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"

                    android:orientation="vertical"
                    android:background="@drawable/rounded_edittextgrey"
                    >


                <TextView
                    android:id="@+id/specialitytxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speciality"
                    android:layout_toRightOf="@+id/chk1"
                    android:textColor="#828f98"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"

                    />
                <TextView
                    android:id="@+id/spcltyphysicianphysician"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Physician"
                    android:layout_toRightOf="@+id/chk1"
                    android:textColor="#002148"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"/>
                </LinearLayout>

                    <ImageView
                        android:id="@+id/spcltimg"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/speciality"
                        android:layout_marginRight="-10dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    >


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_edittextgrey"

                        >


                        <TextView
                            android:id="@+id/location_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:layout_toRightOf="@+id/chk1"
                            android:textColor="#828f98"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="50dp"

                            />
                        <TextView
                            android:id="@+id/loctn_adrs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Olaya street"
                            android:layout_toRightOf="@+id/chk1"
                            android:textColor="#002148"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="8dp"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/location_img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/location"
                        android:layout_marginRight="-10dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relatvinsurance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    >


                    <LinearLayout
                        android:background="@drawable/rounded_edittextgrey"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical"

                        >


                        <TextView
                            android:id="@+id/insurancetxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Insurance"
                            android:layout_toRightOf="@+id/chk1"
                            android:textColor="#828f98"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="50dp"


                            />
                        <TextView
                            android:id="@+id/insurancetxtaig"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AIG"
                            android:layout_toRightOf="@+id/chk1"
                            android:textColor="#002148"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="8dp"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/insurncimg"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/insurance"
                        android:layout_marginRight="-10dp"/>
                </RelativeLayout>
                <Button
                    android:id="@+id/bookagainbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_selector_secondary"
                    android:layout_marginTop="35dp"
                    android:textColor="@android:color/white"
                    android:text="Locate Doctors"
                    android:textAllCaps="false"
                    />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/container_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff" />
</android.support.v4.widget.DrawerLayout>